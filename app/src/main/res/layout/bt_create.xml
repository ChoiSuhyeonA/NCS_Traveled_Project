<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F6F4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPhotoBookInfo"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginRight="20dp"
            android:background="@drawable/buttonshape1"
            android:fontFamily="@font/binggraebold"
            android:shadowColor="#0890FB"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="포토북 정보"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPhotoBookCover"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonshape1"
            android:fontFamily="@font/binggraebold"
            android:shadowColor="#0890FB"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="포토북 표지"
            android:textSize="20dp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="460dp"
        android:layout_gravity="center"
        android:background="#6FA1E2EC">


        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:layout_gravity="center"
            android:id="@+id/gridview"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btnPhotoBookPageCreate"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E2EEF6"
        android:fontFamily="@font/binggraebold"
        android:shadowColor="#0890FB"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="페이지 추가"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btnPhotoBookPageDelete"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E2EEF6"
        android:fontFamily="@font/binggraebold"
        android:shadowColor="#0890FB"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="페이지 삭제"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnPhotoBookSave"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#E2EEF6"
        android:fontFamily="@font/binggraebold"
        android:shadowColor="#0890FB"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="저 장"
        android:textSize="20dp" />


</LinearLayout>